@model Store.Domain.Entities.ShippingDetails

@{
    ViewBag.Title = "Store: order form";
}
<head>
    <meta name="viewport" content="width=device-width" />
    <link href="~/Content/bootstrap.css" rel="stylesheet" />
    <link href="~/Content/bootstrap-theme.css" rel="stylesheet" />
    <link href="~/Content/ErrorStyles.css" rel="stylesheet" />
    <script src="~/Scripts/jquery-1.9.1.js"></script>
    <script src="~/Scripts/jquery.validate.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.js"></script>
    <title></title>
</head>
<h2>Make an order now</h2>
<p>Please, enter your personal information!</p>


@using (Html.BeginForm())
{
    @Html.ValidationSummary();
    <h3>Personal information</h3>
    <div class="form-group">
        <label>Name:</label>
        @Html.TextBoxFor(x => x.Name, new { @class = "form-control" })
        <label>Surname:</label>
        @Html.TextBoxFor(x => x.Surname, new { @class = "form-control" })

    </div>

    <h3>Addres</h3>
    <div class="form-group">
        <label>Country:</label>
        @Html.TextBoxFor(x => x.Country, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Town:</label>
        @Html.TextBoxFor(x => x.City, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Street:</label>
        @Html.TextBoxFor(x => x.Street, new { @class = "form-control" })
    </div>
    <div class="form-group">
        <label>Flat:</label>
        @Html.TextBoxFor(x => x.Flat, new { @class = "form-control" })
    </div>
   

    <h3>Email</h3>
    <div class="form-group">
        <label>Email:</label>
        @Html.TextBoxFor(x => x.Email, new { @class = "form-control" })
    </div>

    <div class="text-center">
        <input class="btn btn-primary" type="submit" value="Make an order" />
    </div>
}